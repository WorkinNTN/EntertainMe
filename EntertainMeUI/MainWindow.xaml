<Window x:Class="EntertainMeUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EntertainMeUI"
        mc:Ignorable="d"
        Title="EntertainMe" Height="450" Width="800"
        Closing="OnClosing"
        Closed="OnClosed">
    <Grid>
        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="_File">
                    <MenuItem Header="_New" Click="mnuFileNew_Click" />
                    <MenuItem Header="_Open"  Click="mnuFileOpen_Click" />
                    <Separator />
                    <MenuItem Header="_Exit" Click="mnuFileExit_Click"/>
                </MenuItem>
            </Menu>
        </DockPanel>
    </Grid>
</Window>
